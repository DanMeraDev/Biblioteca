<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="503.0" prefWidth="854.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.biblioteca.Biblioteca_virtual.controlador.LoginControlador">
    <children>
        <StackPane HBox.hgrow="ALWAYS">
            <children>
                <MediaView fx:id="mediaView" fitHeight="503.0" fitWidth="427.0" preserveRatio="false" />
            </children>
        </StackPane>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="427.0" style="-fx-background-color: #EFEBE9;" HBox.hgrow="ALWAYS">
            <children>
                <Label text="Iniciar Sesión" textFill="#8d6e63">
                    <font>
                        <Font name="System Bold" size="40.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER" prefHeight="26.0" prefWidth="427.0" spacing="10.0">
                    <children>
                        <Label text="Aún no tienes cuenta?" textFill="#8d6e63" />
                        <Hyperlink text="Registrate aquí" />
                    </children>
                </HBox>
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <Label text="Usuario" textFill="#8d6e63">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Label>
                        <TextField fx:id="usuarioLogin" onKeyTyped="#eventKey" promptText="Ingrese su usuario" style="-fx-background-color: #EFEBE9; -fx-border-color: #8d6e63; -fx-border-radius: 5px;">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </TextField>
                        <Label text="Contraseña" textFill="#8d6e63">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Label>
                        <PasswordField fx:id="passwordLogin" onKeyTyped="#eventKey" promptText="Ingrese su contraseña" style="-fx-background-color: #EFEBE9; -fx-border-color: #8d6e63; -fx-border-radius: 5px;">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </PasswordField>
                        <CheckBox mnemonicParsing="false" text="Ver Contraseña" textFill="#8d6e63">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </CheckBox>
                        <Button fx:id="loginButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#accionIngresar" style="-fx-background-color: #8d6e63;" text="Ingresar" textFill="#efebe9">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets left="30.0" right="30.0" />
                    </VBox.margin>
                </VBox>
            </children>
            <HBox.margin>
                <Insets />
            </HBox.margin>
        </VBox>
    </children>
</HBox>
